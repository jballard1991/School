<script>
  (function (expId, variations) {
    var c = variations[TED && TED.cx && TED.cx.id === expId ? TED.cx.v || 0 : 0];
    if (c) document.write(c);
  }("bs-watch", ["\u003Cdiv class='g-button-play player-hero__play__button'\u003E\u003C/div\u003E\n","\u003Ca class='button player-hero__watch-now player-hero__watch-now--poster' href='#'\u003E\n\u003Ci class=\"icon icon_control-play watch-now__icon\"\u003E\u003C/i\u003E\nWatch now\n\u003C/a\u003E\n"]));
