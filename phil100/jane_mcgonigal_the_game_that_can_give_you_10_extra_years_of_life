<script>
  (function () {
    // Must support JSON
    if (!(
      window.JSON &&
      JSON.stringify &&
      JSON.parse
    )) {
      return;
    }
  
    // Must support local storage
    var testVal = 'ted-cxtest';
    try {
      localStorage.setItem(testVal, testVal);
      localStorage.removeItem(testVal);
    } catch(e) {
      return;
    }
  
    // True if test is forced
    var isForced = false;
  
    // True if GA tracking should be enabled
    var isTracked = true;
  
    // Build test list
    var tests = [
      {
        id: "bs-countdown",
        percent: 20,
        qualify: function () {
          // Screen must be at least 1200px
          try {
            if (!window.matchMedia('(min-width:1200px)').matches) {
              return false;
            }
          } catch (e) {
            return false;
          }
  
          return true;
        },
        variations: [null, function () { q('cx.bs.countdown.init') }]
      }
    ];
  
    var lsKey = 'cx';
  
    function disableTests() {
      localStorage.setItem(lsKey, 'false');
    }
  
    function getTest(id) {
      var i = tests.length;
      while (i--) {
        if (tests[i] && tests[i].id == id) {
          return tests[i];
        }
      }
      return false;
    }
  
    function runTest(id, v) {
      var test = getTest(id);
  
      if (!test) {
        return;
      }
  
      document.documentElement.className += (
        ' cx' +
        ' cx--' + id +
        ' cx--' + id + '--' + v
      );
  
      TED.cx = {id: id, v: v};
  
      if (test.variations && test.variations[v] && test.qualify()) {
        test.variations[v]();
      }
  
      if (isTracked) {
        __ga('set', "dimension7", (id + ':' + v));
  
        __ga('set', 'expId', id);
        __ga('set', 'expVar', v);
      }
    }
  
    function runLsValTest() {
      runTest(lsVal.id, +lsVal.v);
    }
  
    // Handle forced experiments
    var hrefArray = location.href.split('#cx?'),
        hrefMatch = (hrefArray.pop() || '').match(/id=([^&]+)&v=(\d+)(&ga=1)?/);
    if (hrefMatch) {
      isForced = true;
      isTracked = !!(hrefMatch[3]);
      runTest(hrefMatch[1], +hrefMatch[2]);
      localStorage.setItem(lsKey + '-1', '0');
      return;
    }
  
    // Disregard users who are selected out of tests
    var lsVal = JSON.parse(localStorage.getItem(lsKey));
    if (lsVal === false) {
      return;
    }
  
    // Execute the previously selected test
    if (lsVal) {
      runLsValTest();
      return;
    }
  
    // ...remaining code is for new visitors only...
  
    // Only first time visitors should be tested
    if (!TED.isFirstVisit) {
      return;
    }
  
    // Choose a test based on a random %
    var len = tests.length,
        j = Math.random() * 100,
        test,
        total = 0;
    for (var i = 0; i < len; i++) {
      if (
        tests[i].qualify() &&
        j > total &&
        j < total + tests[i].percent
      ) {
        test = tests[i];
        test.index = i;
        break;
      }
  
      total += tests[i].percent;
    }
  
    // If the user is not part of a test group...
    if (!test) {
      disableTests();
      return;
    }
  
    // Set lsVal for next visit
    lsVal = {
      id: test.id,
      v: Math.random() * test.variations.length | 0
    };
    localStorage.setItem(lsKey, JSON.stringify(lsVal));
  
    // Start experiment
    runLsValTest();
  }());
</script>

<script>
  __ga('set', "dimension2", 1501);
</script>
