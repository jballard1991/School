<script type="text/javascript">

	function isValidEmailAddress(emailAddress) {
		var pattern = /^([a-zA-Z0-9])(([a-zA-Z0-9])*([._+-])*([a-zA-Z0-9]))*@(([a-zA-Z0-9-])+(.))+([a-zA-Z]{2,4})+$/;
		return pattern.test(emailAddress);
	}

	(function($) {

		$.fn.EmailCampaignsSubscribe = function(client_id, lists, opt) {

			var defaults = {
				form: "IBNSubscribeForm_Sidebar",
				email: "IBNSubscribeEmail_Sidebar",
				msg: "IBNStatusMessage_Sidebar",
				button: "IBNSubscribeButton_Sidebar",
				successMsg: "<span class='thanks-signup-sidebar'>Thanks for requesting<br><em>The Sun</em>'s newsletter.<span class='complete-signup'>TO COMPLETE THE<br>SIGNUP PROCESS</span> you still need to respond to<br>a confirmation e-mail from <a href='mailto:newsletter@thesunmagazine.org'>newsletter@thesunmagazine.org</a></span>",
				emailValidation: true,
				submitForm: false,
				errorMsg: "Oops...check your email address"
			};

			var subscribeFunction = function() {

				var valid = true;

				if (opt.emailValidation && !isValidEmailAddress($("#"+opt.email).val())) {
					valid = false;
				}

				if (valid) {
					var data = $("#"+opt.form).serialize();
					var img = "";

					for (i in lists) {
						img += "<img style='display:none;' src='http://server1.emailcampaigns.net/autoadd/?c="+client_id+"&"+data+"&lid="+lists[i]+"'>";
					}

					$("#"+opt.form).html(opt.successMsg + img);
				} else {
					$("#"+opt.msg).html(opt.errorMsg);
				}

			};

			var opt = $.extend(defaults, opt);

			$("#"+opt.button).click( subscribeFunction );

			$("#"+opt.form).submit( function(e) {

				if ( ! opt.submitForm ) {
					e.preventDefault();
					e.stopPropagation();
				}

			   subscribeFunction();
			});

		};

	})(jQuery);

</script> 
