	<div class="section_head">
		<span class="left">The Sun Interview</span>
		<!-- leave the nbsp at the head of this span, else sIFR breakkkkks! -->
		<span class="issue_info">&nbsp;December 2007 <span class="grey">|</span> issue 384</span>
		<div class="clear"></div>
	</div>

	<!-- START article -->
	<div class="article">
		<h1 class="title">Who Hears This Sound?</h1>
		<h2 class="subtitle">Adyashanti On Waking Up From The Dream Of &ldquo;Me&rdquo; </h2><div class="credit"><i>by</i> Luc Saunders <span style="text-transform: lowercase;">and</span> Sy Safransky</div>
		<div class="border_bot_1" style="margin-bottom: 15px;"></div>
 		<div  class="article_photo hor">
				<div id="flash_content" class="photo">

			<p style="padding: 10px;">This page contains a photograph which requires the Flash plug-in to be viewed. You can download it for free, <a href="http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash">here</a>.</p>

			<script type="text/javascript">
			//random 'refresh' value is appended to SWF to force IE to reload the file, otherwise, FlashVars data is not passed on page refresh or browser back button
			var so = new SWFObject("_media/photo_loader_v7.swf?refresh=2138176821", "photo", "415", "281", "8", "#FFFFFF");
			so.addParam("menu","false");
			so.addParam("wmode","opaque");
			so.addParam("FlashVars","photo=_media/article/photo/384_Adyashanti_baida_debra.jpg&credit=Debra Baida&photogBio=<p><b>DEBRA BAIDA </b>lives in San Francisco. Photography has been her passion since she was four, when she sat on a stool in her father&rsquo;s darkroom and watched images appear on paper floating in trays of liquid.</p>&theWidth=415&theHeight=281");
			so.write("flash_content");
			</script>

